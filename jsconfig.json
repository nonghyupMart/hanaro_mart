{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    // "moduleResolution": "classic",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@assets/*": ["assets/*"],
      "@constants/*": ["constants/*"],
      "@UI/*": ["components/UI/*"],
      "@actions/*": ["store/actions/*"],
      "@reducers/*": ["store/reducers/*"],
      "@models/*": ["models/*"],
      "@navigation/*": ["navigation/*"]
    },
    "lib": ["dom", "dom.iterable", "scripthost", "es2015", "es2016", "es2017"]
  },
  "include": ["*/*.js"],
  "exclude": ["node_modules"]
}
